<?xml version="1.0"?>

<robot xmlns:xacro="http://ros.org/wiki/xacro">

	<xacro:macro name="bhand_transmissions" params="prefix">
	<!--Left Finger | Prox Joint transmission and motor -->
		<transmission name="${prefix}/finger_1/prox_trans">
			<type>transmission_interface/SimpleTransmission</type>
			<joint name="${prefix}/finger_1/prox_joint">
				<hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
			</joint>
			<actuator name="${prefix}/finger_1/prox_motor">
				<mechanicalReduction>1</mechanicalReduction>
				<!-- <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface> -->
			</actuator>
		</transmission>
	
	<!--Left Finger | Mid Joint transmission and motor -->
