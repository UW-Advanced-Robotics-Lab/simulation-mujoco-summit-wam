<robot 
    xmlns:xacro="http://www.ros.org/wiki/xacro"
    xmlns:controller="http://playerstage.sourceforge.net/gazebo/xmlschema/#controller">

    <!-- Some macros used by the WAM urdf -->
    <xacro:include filename="$(find waterloo_steel_description)/urdf/wam/common.urdf.xacro"/>
    <!-- Definition of a single WAM arm -->
    <xacro:include filename="$(find waterloo_steel_description)/urdf/wam/arm.urdf.xacro"/>
    <!-- Definition of all the different parts of a WAM arm -->
    <xacro:include filename="$(find waterloo_steel_description)/urdf/wam/components_V1.urdf.xacro"/>
    <!-- Definitions for the barrett hand -->
    <xacro:include filename="$(find waterloo_steel_description)/urdf/wam/hand.urdf.xacro"/>
    <!-- Definitions for the barrett ball -->
    <xacro:include filename="$(find waterloo_steel_description)/urdf/wam/ball.urdf.xacro"/>

    <!-- Materials -->
    <material name="WAMGrey">
        <color rgba="0.7 0.7 0.7 1.0"/>
    </material>

</robot>
